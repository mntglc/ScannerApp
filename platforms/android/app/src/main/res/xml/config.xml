<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.scanapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <name>Scanner App</name>
    <description>
        A sample Apache Cordova application that read barcodes and check if is an ORDER (8 alphanumeric digits) or a POSITION (5 numeric characters)
    </description>
    <author email="mntglc@gmail.com" href="http://cordova.io">
        Gianluca
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <hook src="scripts/afterBuild.js" type="after_build" />
    <hook src="scripts/afterRun.js" type="after_run" />
    <icon density="ldpi" src="www\assets\logo.png" />
    <icon density="mdpi" src="www\assets\logo.png" />
    <icon density="hdpi" src="www\assets\logo.png" />
    <icon density="xhdpi" src="www\assets\logo.png" />
    <splash density="land-hdpi" src="www\assets\logo.png" />
    <splash density="land-ldpi" src="www\assets\logo.png" />
    <splash density="land-mdpi" src="www\assets\logo.png" />
    <splash density="land-xhdpi" src="www\assets\logo.png" />
    <splash density="port-hdpi" src="www\assets\logo.png" />
    <splash density="port-ldpi" src="www\assets\logo.png" />
    <splash density="port-mdpi" src="www\assets\logo.png" />
    <splash density="port-xhdpi" src="www\assets\logo.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeepRunning" value="false" />
    <preference name="LoadUrlTimeoutValue" value="10000" />
    <preference name="InAppBrowserStorageEnabled" value="false" />
    <preference name="LoadingDialog" value="Scann App. Loading..." />
    <preference name="ErrorUrl" value="error.html" />
    <preference name="ShowTitle" value="false" />
    <preference name="LogLevel" value="VERBOSE" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <preference name="DefaultVolumeStream" value="call" />
    <preference name="OverrideUserAgent" value="Mozilla/5.0 My Browser" />
    <preference name="AppendUserAgent" value="My Browser" />
    <preference name="Fullscreen" value="true" />
    <preference name="WebViewBounce" value="true" />
    <preference name="Orientation" value="portrait" />
</widget>
